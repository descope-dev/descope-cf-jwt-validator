{
	"name": "descope-worker",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"prepare": "husky install",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint . --max-warnings 0",
		"lint:fix": "eslint . --fix --max-warnings 0",
		"deploy": "wrangler deploy",
		"start": "wrangler dev",
		"test": "bun test --coverage"
	},
	"type": "module",
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20260122.0",
		"@descope/node-sdk": "^1.9.1",
		"@tsconfig/bun": "^1.0.10",
		"@types/bun": "latest",
		"@types/cookie": "^1.0.0",
		"@types/node": "^22.10.7",
		"@typescript-eslint/eslint-plugin": "^8.20.0",
		"@typescript-eslint/parser": "^8.20.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.2",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-security": "^3.0.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"prettier": "^3.4.2",
		"typescript": "^5.7.3",
		"wrangler": "^4.59.3"
	},
	"dependencies": {
		"cookie": "^1.1.1",
		"jose": "^6.1.3"
	},
	"prettier": {
		"semi": true,
		"singleQuote": false,
		"tabWidth": 2,
		"useTabs": true,
		"trailingComma": "all",
		"printWidth": 100,
		"arrowParens": "always"
	},
	"lint-staged": {
		"*.{ts,js,json,md,yml,yaml,toml}": [
			"prettier --write"
		],
		"*.{ts,js}": [
			"eslint --fix --max-warnings 0"
		]
	}
}
